<body>

<div class="container">
    <h2>DG HTML to ZIP</h2>
    
    <label>File ka naam rakhein:</label>
    <input type="text" id="fileName" placeholder="example.html" value="index.html">
    
    <label>HTML Code Paste Karein:</label>
    <textarea id="htmlCode" placeholder="<html>...</html>"></textarea>
    
    <div class="btn-group">
        <button class="btn clear-btn" onclick="clearAll()">Clear</button>
        <a href="https://dgsell9673-design.github.io/DGhtmltozip/" class="btn download-btn" onclick="checkCode(event)">Download ZIP</a>
    </div>

    <footer>Powered by DG Tools</footer>
</div>

<script>
    function clearAll() {
        document.getElementById('htmlCode').value = '';
        document.getElementById('fileName').value = 'index.html';
    }

    function checkCode(event) {
        const code = document.getElementById('htmlCode').value;
        
        if (!code.trim()) {
            alert("Kripya pehle HTML code paste karein!");
            event.preventDefault(); // Agar code nahi hai toh redirect nahi hoga
            return;
        }
        
        // Code ko memory mein save kar rahe hain taaki agar website handle kar sake toh use kare
        localStorage.setItem('temp_html_code', code);
        localStorage.setItem('temp_file_name', document.getElementById('fileName').value);
    }
</script>

